<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.soundcloud"
       name="SoundCloud"
       version="0.1.1"
       provider-name="Zsolt Török">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Listen to music from SoundCloud, the online audio distribution service.</summary>
    <description lang="en">SoundCloud is a platform for musicians to promote and distribute their music online.</description>
  </extension>
</addon>
